{
  "name": "host",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/host/src",
  "projectType": "application",
  "implicitDependencies": [
    "shop",
    "cart",
    "about",
    "shared-assets",
    "shared-styles"
  ],
  "tags": [
    "type:app-shell",
    "scope:cart"
  ],
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "compiler": "babel",
        "outputPath": "dist/apps/host",
        "index": "apps/host/src/index.html",
        "baseHref": "/",
        "main": "apps/host/src/main.ts",
        "tsConfig": "apps/host/tsconfig.app.json",
        "assets": [
          "apps/host/src/favicon.ico",
          "apps/host/src/assets"
        ],
        "styles": [
          "apps/host/src/styles.css"
        ],
        "scripts": [],
        "webpackConfig": "apps/host/webpack.config.ts",
        "postcssConfig": "apps/host/postcss.config.js"
      },
      "configurations": {
        "local": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": true
        },
        "development": {
          "fileReplacements": [
            {
              "replace": "apps/host/src/environments/environment.ts",
              "with": "apps/host/src/environments/environment.dev.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false,
          "webpackConfig": "apps/host/webpack.config.prod.ts"
        },
        "staging": {
          "fileReplacements": [
            {
              "replace": "apps/host/src/environments/environment.ts",
              "with": "apps/host/src/environments/environment.staging.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false,
          "webpackConfig": "apps/host/webpack.config.prod.ts"
        },
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/host/src/environments/environment.ts",
              "with": "apps/host/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false,
          "webpackConfig": "apps/host/webpack.config.prod.ts"
        }
      }
    },
    "serve": {
      "executor": "@nx/react:module-federation-dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "host:build",
        "hmr": true,
        "port": 4200
      },
      "configurations": {
        "local": {
          "buildTarget": "host:build:local"
        },
        "production": {
          "buildTarget": "host:build:production",
          "hmr": false
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "serve-static": {
      "executor": "@nx/react:module-federation-static-server",
      "defaultConfiguration": "production",
      "options": {
        "serveTarget": "host:serve"
      },
      "configurations": {
        "development": {
          "serveTarget": "host:serve:development"
        },
        "production": {
          "serveTarget": "host:serve:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/host/jest.config.ts"
      }
    }
  }
}
