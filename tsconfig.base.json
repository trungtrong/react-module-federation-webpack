{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@apps/remote-about": [
                "libs/remote-about/src/index.ts"
            ],
            "@apps/remote-about/*": [
                "libs/remote-about/src/*"
            ],
            "@apps/remote-shop": [
                "libs/remote-shop/src/index.ts"
            ],
            "@apps/remote-shop/*": [
                "libs/remote-shop/src/*"
            ],
            "@libs/shared/assets": ["libs/shared/assets/src/index.ts"],
            "@libs/shared/assets/*": ["libs/shared/assets/src/*"],
            "@libs/shared/core": ["libs/shared/core/src/index.ts"],
            "@libs/shared/core/*": ["libs/shared/core/src/*"],
            "@libs/shared/styles": ["libs/shared/styles/src/index.ts"],
            "@libs/shared/ui": ["libs/shared/ui/src/index.ts"],
            "@libs/shared/ui/*": ["libs/shared/ui/src/*"],
            "@libs/shared/utils": ["libs/shared/utils/src/index.ts"],
            "@libs/shared/utils/*": ["libs/shared/utils/src/*"],
            "@host/environment": ["apps/host/src/environments/environment.ts"],
            "about/Module": ["apps/about/src/remote-entry.ts"],
            "cart/Module": ["apps/cart/src/remote-entry.ts"],
            "shop/Module": ["apps/shop/src/remote-entry.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
