{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@react-module-federation-webpack/assets": [
                "libs/shared/assets/src/index.ts"
            ],
            "@react-module-federation-webpack/remote-about": [
                "libs/remote-about/src/index.ts"
            ],
            "@react-module-federation-webpack/remote-shop": [
                "libs/remote-shop/src/index.ts"
            ],
            "@react-module-federation-webpack/styles": [
                "libs/shared/styles/src/index.ts"
            ],
            "@react-module-federation-webpack/utils": [
                "libs/shared/utils/src/index.ts"
            ],
            "about/Module": ["apps/about/src/remote-entry.ts"],
            "cart/Module": ["apps/cart/src/remote-entry.ts"],
            "shop/Module": ["apps/shop/src/remote-entry.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
